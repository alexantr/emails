#!/usr/bin/env php
<?php

// php.ini: sendmail_path = /path/to/emails/bin/sendmail

require_once __DIR__ . '/../app/functions.php';

$dir = __DIR__ . '/../inbox';

if (!is_dir($dir)) {
    @mkdir($dir, 0777, true);
}
if (!is_dir($dir)) {
    exit;
}

$mail = '';
while (false !== ($line = fgets(STDIN))) {
    $mail .= $line;
}

$path = $dir . '/' . generate_message_filename();

file_put_contents($path, $mail);
